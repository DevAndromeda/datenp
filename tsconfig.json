{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": false,
        "pretty": true,
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true
    },
    "include": [
        "src/**/*"
    ]
}